<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#888CAC"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/deletebutton" />

            <ImageView
                android:id="@+id/edit"
                app:srcCompat="@drawable/edit"
                android:backgroundTint="@null"
                android:layout_width="40dp"
                android:layout_height="35dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:textColor="#0E0C0C"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Name" />

        <TextView
            android:id="@+id/Breed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:text="Breed"
            android:textColor="#0E0C0C"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/YearOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:text="YearOfBirth"
            android:textColor="#0E0C0C"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ArrivalDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:text="ArrivalDate"
            android:textColor="#0E0C0C"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/MedicalDetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:text="MedicalDetails"
            android:textColor="#0E0C0C"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CrateNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:text="CrateNumber"
            android:textColor="#0E0C0C"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.cardview.widget.CardView>